
@{
    ViewBag.Title = "food";
}

<div class="row-fluid">
    <div class="biankuang">
        <div class="col-sm-4 col-lg-3 col-xs-12 col-md-6 grid" ng-repeat="r in foods | limitTo:limit" ng-init="saveButton=false">
            <div class="insideStyle">
                <div><a href="#/Home/food/{{r.Id}}"><img class="grid-photo" src='{{r.imgUrl}}'></a></div>
                <div class="grid-title">{{r.name}}</div>
                <p class="post-description">{{r.description}}</p>
                <ul class="control-button">
                    <li class="bookmark1" ng-model="value">
                        <div style="float:left" ng-click="value=value+1"><a><img class="redHeart" src="~/img/heart.jpg"></a></div>
                        <div style="float:left; margin-left:5px;margin-top:2px;">{{value}}</div>
                    </li>
                    <li class="bookmark2">
                        <button ng-click="save(r.Id);" ng-disabled="saveButton" class="savebutton">save</button>
                    </li>
                </ul>
            </div>
        </div>
        <div class="loadmore">
            <a class="clicker" ng-click='loadMore()' ng-init="Loadmore1=true" ng-show="Loadmore1">Load More</a>
        </div>
    </div>
</div>

